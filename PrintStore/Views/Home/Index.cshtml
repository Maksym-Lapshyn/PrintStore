@{
    ViewBag.Title = "Home Page";
}

    <div class="carousel slide carousel-fade" data-ride="carousel" id="carousel-ex">
        <ol class="carousel-indicators">
            <li data-target="#carousel-ex" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-ex" data-slide-to="1"></li>
            <li data-target="#carousel-ex" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/Infrastructure/carousel_1.jpg">
                <div class="carousel-caption">
                    <h1>Innovate</h1>
                    <h3>Be among the first users of immersive technology</h3>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/Infrastructure/carousel_2.jpg">
                <div class="carousel-caption">
                    <h1>Design</h1>
                    <h3>Create design on your own or select it with our help</h3>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/Infrastructure/carousel_3.jpg">
                <div class="carousel-caption">
                    <h1>Dream</h1>
                    <h3>Variety of models is limited only by your imagination</h3>
                </div>
            </div>
        </div>
    </div>

    <h1>PrintStore</h1>
    <p class="lead">PrintStore is a place, where you can find the most popular 3d models and print them using top-quality material</p>
    <p>@Html.ActionLink("Browse categories", "GetCategories", "Product", null, new { @class = "btn btn-primary btn-lg" })</p>

    <div class="row">
        <div class="col-md-4">
            <h2>Pure quality</h2>
            <p>
                Check our insane quality! According to our customers, fabric of our products can be compared to material of NASA's spaceships!
            </p>
        </div>
        <div class="col-md-4">
            <h2>Grounded prices</h2>
            <p>
                If you cannot allow yourself to buy an expensive toy from a luxury vendor, print it with us! You will be amazed by our flexible pricing strategy.
            </p>
        </div>
        <div class="col-md-4">
            <h2>Fast delivery</h2>
            <p>
                Ran out of time and need your shipment right away? Feel free to contact us and select the most suitable and fastest delivery methods.
            </p>
        </div>
    </div>
